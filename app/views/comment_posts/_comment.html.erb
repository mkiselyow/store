<% @useful_article.comment_posts.each do |comment| %>
  <div class="row">
    <div class="col-sm-12">
      <div class="panel panel-white post panel-shadow">
        <div class="post-heading">
          <div class="pull-left image">
            <%= image_tag comment.user.avatar_url(:small), class: "img-circle avatar" %>
          </div>
          <div class="pull-left meta">
            <div class="title h5">
              <b><%= link_to comment.user.full_name, user_path(comment.user) %></b>
            </div>
            <h6 class="text-muted time">
              <%= time_ago_in_words(comment.created_at) %>
            </h6>
          </div>
        </div> 
        <div class="post-description"> 
          <p><%= raw comment.body %></p>
          <% if current_user %>
            <% if current_user.id == comment.user_id %>
              <div class="stats">
                <%= link_to 'Удалить', useful_article_comment_post_path(comment.useful_article, comment), method: :delete, data: { confirm: 'Вы действительно хотите удалить этот комментарий?' }, class: "btn btn-default stat-item" %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
