<% if some_array_of_products.any? %>
  <div class="carousel_multiple">
    <h1><%= name_of_carousel %></h1>
    <div class="row">
      <div class="col-sm-12 col-xs-12">
        <div class="carousel slide multi-item-carousel" id="<%= id_of_this_carousel %>">
          <div class="carousel-inner">
            <div class="item active">
              <%= render  partial: "products/carousel_row_mobile", locals: { some_array_of_products_limited: some_array_of_products.limit(1) } %>
            </div>
            <% (rows_count-1).times do |count| %>
              <% offset_count = (count+1)*1 %>
              <% if some_array_of_products.limit(1).offset(offset_count).any? %>
                <div class="item">
                  <%= render  partial: "products/carousel_row_mobile", locals: { some_array_of_products_limited: some_array_of_products.limit(1).offset(offset_count) } %>
                </div>
              <% end %>
            <% end %>
            
            <!--  Example item end -->
          </div>
          <a class="left carousel-control" href="#<%= id_of_this_carousel %>" data-slide="prev"><i class="glyphicon glyphicon-chevron-left"></i></a>
          <a class="right carousel-control" href="#<%= id_of_this_carousel %>" data-slide="next"><i class="glyphicon glyphicon-chevron-right"></i></a>
        </div>
      </div>
    </div>
  </div>
<% end %>
