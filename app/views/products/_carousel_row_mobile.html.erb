<div class="row">
  <% some_array_of_products_limited.each do |some_array_of_products_limited_each| %>
    <div class="col-sm-12 col-xs-12 product_view_class product_<%= some_array_of_products_limited_each.id %>">
       <%= render  partial: "products/product", locals: { product: some_array_of_products_limited_each } %>
       <%= button_to line_items_path(product_id: some_array_of_products_limited_each), :class => "buttom_add_to_cart", remote: true do %>
         <%= fa_icon 'cart-plus', text: t('products.add_to_cart') %>
       <% end %>
    </div>
  <% end %>
</div>
