<!-- <p id="notice"><%= notice %></p> -->


<main>
  <aside class="sticky">
    <%= render  partial: "products/search_multiple_form" %>
  </aside>
  <article>
    <%= render  partial: "products/carousel_full", locals: { some_array_of_products: @newest_ten_products, rows_count: 2, id_of_this_carousel: "newest_carousel", name_of_carousel: "Новинки"  } %>

    <!-- special offers carousel -->
    
    <%= render  partial: "products/carousel_full", locals: { some_array_of_products: @products_wth_special_offers, rows_count: 5, id_of_this_carousel: "offers_carousel", name_of_carousel: "Акции" } %>
    
    <!-- top viewed carousel -->

    <%= render  partial: "products/carousel_full", locals: { some_array_of_products: @products_most_viewed, rows_count: 5, id_of_this_carousel: "top_viewed_carousel", name_of_carousel: "Популярные" } %>

    <!-- all products -->

    <%= render  partial: "products/all_products_div", locals: { some_array_of_products: @products, rows_count: (@products_count/4), name_of_div: "Все Товары" } %>
  </article>
</main>

<div class="mobile" name="top">
  <!-- This is the container enabling the JavaScript -->
  <div class="uk-button-dropdown" data-uk-dropdown="{justify:'.mobile'}">

      <!-- This is the element toggling the dropdown -->
      <button class="mobile_search_button"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>

      <!-- This is the dropdown -->
      <div class="uk-dropdown">
        <%= render  partial: "products/search_multiple_form" %>
      </div>
  </div>
  <%= render  partial: "products/carousel_full_mobile", locals: { some_array_of_products: @newest_ten_products, rows_count: 2*4, id_of_this_carousel: "newest_mobile_carousel", name_of_carousel: "Новинки"  } %>

  <!-- special offers carousel -->
  
  <%= render  partial: "products/carousel_full_mobile", locals: { some_array_of_products: @products_wth_special_offers, rows_count: 5*4, id_of_this_carousel: "offers_mobile_carousel", name_of_carousel: "Акции" } %>
  
  <!-- top viewed carousel -->

  <%= render  partial: "products/carousel_full_mobile", locals: { some_array_of_products: @products_most_viewed, rows_count: 5*4, id_of_this_carousel: "top_viewed_mobile_carousel", name_of_carousel: "Популярные" } %>

  <!-- all products -->

  <%= render  partial: "products/all_products_div_mobile", locals: { some_array_of_products: @products, rows_count: @products_count, name_of_div: "Все Товары" } %>
</div>
<a href="#0" class="cd-top"><span class="glyphicon glyphicon-chevron-up" aria-hidden="true"></span></a>