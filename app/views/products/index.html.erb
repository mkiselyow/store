<h1></h1>
<main>
  <aside class="sticky search_multiple_form">
    <button class="uk-button hide_side_nav_button">Показать корзину</button>
    <div id="search_multiple_form">
      <%= render  partial: "products/search_multiple_form" %>
    </div>
    <div class="cart_sidebar">
      <%= hidden_div_if(@cart.line_items.empty?, id: 'my_cart', class: 'my_cart') do %>
        <%= render 'cart_product' %>
      <% end %>
    </div>
  </aside>
  <article class='article_products'>
    <div class="row">
      <div class="col-md-12">
        <h1>Все товары</h1>
        <div id="products">
          <%= render 'products' %>
        </div>
      </div>
    </div>
  </article>
</main>

<div class="mobile" name="top">
  <!-- This is the container enabling the JavaScript -->
  <div class="uk-button-dropdown" data-uk-dropdown="{justify:'.mobile'}">
    <!-- This is the element toggling the dropdown -->
    <button class="mobile_search_button"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
    <p></p>

    <!-- This is the element toggling the dropdown -->
<!--     <button class="mobile_search_button"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button> -->

    <!-- This is the dropdown -->
    <div class="uk-dropdown">
      <%= render  partial: "products/search_multiple_form" %>
      <div class="row">
        <div class="col-md-12">
          <h1>Все товары</h1>
          <div id="products_mobile">
            <%= render 'products_mobile' %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- all products -->
  <%= render  partial: "products/all_products_div_mobile", locals: { some_array_of_products: @products, rows_count: @products_count, name_of_div: "Все Товары" } %>
</div>
<a href="#0" class="cd-top"><span class="glyphicon glyphicon-chevron-up" aria-hidden="true"></span></a>
