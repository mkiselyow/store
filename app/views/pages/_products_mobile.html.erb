<div class="row">
  <% @products_mobile.each do |product| %>
    <div class="col-xs-10 col-xs-offset-1 product_view_class">
      <%= render  partial: "products/product", locals: { product: product } %>
      <%= button_to 'В Корзину', product_line_items_path(product.id), :class => "buttom_add_to_cart", remote: true  %>
    </div>
  <% end %>
</div>
<div class="row">
  <center>
    <%= will_paginate @products_mobile, renderer: BootstrapPagination::Rails, previous_label: '<=', next_label:'=>' %>
  </center>
</div>
