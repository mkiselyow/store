<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">
    <div class="container">
      <div class="well">
        <center>
          <h2 class="omb_authTitle">
            <%= t('session.log_in') %>
          </h2>
        </center>
        <div class="row">
          <div class="col-xs-12 col-md-4 col-md-offset-2">
            <form class="omb_loginForm" action="" autocomplete="off" method="POST">
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-user"></i></span>
                <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: t('session.email') %>
              </div>
              <br>
              <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                <%= f.password_field :password, class: 'form-control password-form', placeholder: t('session.password')  %>
                <span class="input-group-addon hide-show">
                  <span class="fa fa-eye"></span>
                </span>
              </div>
              <br>
              <div class="row">
                <div class="col-xs-6 col-md-6">
                  <%= f.label :remember_me, t('session.remember_me') %>
                  <%= f.check_box :remember_me %>
                </div>
                <div class="col-xs-6 col-md-6">
                  <%= link_to t('session.forgot_password'), new_password_path(resource_name), class: 'pull-right' %>
                </div>
              </div>
              <%= f.submit t('session.log_in'), class: 'btn btn-success btn-block' %>
              <p></p>
            </form>
          </div>
          <div class="col-md-4 col-xs-12">
            <div class="row">
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12 col-md-12 col-md-offset-2">
            <p>
              <%= t('session.if_not_autorise') %> <%= link_to t('session.sign_up'), new_registration_path(resource_name) %>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
