<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="col-md-4">
    <h2 align="center">Вход</h2>
    <div class="row">
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: 'form-control' %>
      </div>
    </div>
    <div class="row">
      <div class="field">
        <%= f.label :password, "Пароль" %><br />
        <%= f.password_field :password, autocomplete: "off", class: 'form-control'  %>
      </div>
    </div>
    <div class="row">
      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, "Запомнить меня" %>
        </div>
      <% end -%>
    </div>
    <div class="row">
      <div class="actions">
        <%= f.submit "Войти", class: 'btn btn-success' %>
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "Регистрация", new_registration_path(resource_name), class: 'btn btn-primary' %>
        <% end -%>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Забыли пароль?", new_password_path(resource_name), class: 'btn btn-warning' %><br />
        <% end -%>
      </div>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
  </div>
