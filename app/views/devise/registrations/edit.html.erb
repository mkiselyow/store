<h1>Редактировать профиль </h1>
<div class="row">
  <div class="col-md-10 col-md-offset-2">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <div class="row">
        <div class="field col-md-4">
          <%= f.label(:first_name, "Имя" ) %><br />
          <%= f.text_field :first_name, id: :user_first_name, class: 'form-control' %>
        </div>
        <div class="field col-md-4">
          <%= f.label(:last_name, "Фамилия" ) %><br />
          <%= f.text_field :last_name, id: :user_last_name, class: 'form-control' %>
        </div>
      </div>
      <p></p>
      <div class="row">
        <div class="field col-md-4">
          <%= f.label(:email, "Эл. почта" ) %><br />
          <%= f.email_field :email, autofocus: true, class: 'form-control' %>
        </div>
        <div class="field col-md-4">
          <%= f.label(:number, "Номер телефона" ) %><br />
          <%= f.text_field :number, id: :user_number, :required => true, :placeholder => "Обязательное поле", class: 'form-control' %>
        </div>
      </div>
      <p>
      <div class="row">
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Ожидаем подтверждения : <%= resource.unconfirmed_email %></div>
        <% end %>
      </div>
      <p>
      <div class="row">
        <div class="field col-md-4">
          <%= f.label(:avatar, "Аватар" ) %><br />
          <%= f.file_field :avatar, class: 'profile_upload' %>
          <%= f.hidden_field(:avatar_cache) %>
        </div>
        <div class="col-md-6 upload-preview">
          <img class="upload_avatar edit_upload_avatar" />
        </div>
      </div>
      <p>
      <div class="row">
        <div class="col-md-4">
          <a class="btn btn-info" id='changePasswordForm'>Изменить пароль</a>
        </div>
      </div>
      <div class="row change-password">
        <div class="field col-md-4">
          <%= f.label(:password, "Новый пароль" ) %><br />
          <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> знаков минимум</em>
          <% end %>
        </div>
        <div class="field col-md-4">
          <%= f.label(:password_confirmation, "Подтверждения пароля" ) %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
        </div>
      </div>
      <p>
      <div class="row">
        <p>
        <div class="field col-md-4">
          <%= f.label(:current_password, "Пароль" ) %> <i>(введите текущий пароль чтобы подтвердить изменения)</i><br />
          <%= f.password_field :current_password, autocomplete: "off", class: 'form-control' %>
        </div>
      </div>
      <p></p>
      <div class="actions">
        <%= f.submit "Отправить изменения", class: 'btn btn-warning' %>
      </div>
    <% end %>
    <p></p>
    <div class="well col-md-8">
      <center>
        <h3>Удалить аккаунт</h3>
        <p>Не нравится? <%= button_to "Удалить мой аккаунт", registration_path(resource_name), data: { confirm: "Вы действительно хотите удалить свой аккаунт?   Все ваши данные удалятся" }, method: :delete, class: 'btn btn-danger' %></p>
      </center>
    </div>
    <div class="row">
      <div class="col-md-8">
        <%= link_to "Назад", :back %>
      </div>
    </div>
  </div>
</div>
<script>
  var ch_password = $("#changePasswordForm");
  ch_password .click(function(){
    $( ".change-password" ).show();
    ch_password.hide();
  });
</script>