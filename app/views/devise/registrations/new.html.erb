<h2>Регистрация</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label(:first_name, "Имя" ) %><br />
    <%= f.text_field :first_name, id: :user_first_name %>
  </div>

  <div class="field">
    <%= f.label(:last_name, "Фамилия" ) %><br />
    <%= f.text_field :last_name, id: :user_last_name %>
  </div>

  <div class="field">
    <%= f.label(:email, "Эл. почта" ) %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label(:number, "Номер телефона" ) %><br />
    <%= f.text_field :number, id: :user_number, :required => true, :placeholder => "Обязательное поле" %>
  </div>

  <div class="field">
    <%= f.label(:admin, "Администратор" ) %><br />
    <%= f.check_box :admin, id: :user_admin %>
  </div>

  <div class="field">
    <%= f.label(:avatar, "Аватар" ) %><br />
    <%= f.file_field :avatar, id: :user_avatar %>
  </div>

  <div class="field">
    <%= f.label(:password, "Пароль" ) %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> знаков минимум)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label(:password_confirmation, "Подтверждения пароля" ) %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Подтвердить" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>