<div class="row">
  <div class="col-md-2 col-xs-12 col-md-offset-1">
    <h3><%= t('session.forgot_password') %></h3>
  </div>
  <div class="col-md-6 col-xs-12">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>
      <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-envelope-o"></i></span>
        <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: t('session.email'), required: true %>
        <span class="input-group-btn">
          <%= f.submit t('session.send'), class: 'btn btn-success btn-group' %>
        </span>
      </div>
    <% end %>
    <br>
  </div>
  <div class="col-md-2 col-xs-12">
    <p>
      <button class='btn btn-info pull-right' onclick="javascript:history.back(); return false;">
        <%= fa_icon 'share', text: 'Back' %>
      </button>
    </p>
  </div>
</div>
