<main>
  <div class="row">
    <aside class="sticky search_multiple_form">
      <div id="search_multiple_form">
        <%= render "searches/new" %>
      </div>
      <br>
      <div class="category-lists">
        <%= render 'categories/sidebar_category' %>
      </div>
    </aside>
    <article class='article_products'>
      <h1>Найдено <%= @search.products.count %> товаров</h1>
      <% @search.products.each do |product| %>
        <div class="col-sm-3 product_view_class">
          <%= render  partial: "products/product", locals: { product: product } %>
          <%= button_to 'В Корзину', product_line_items_path(product.id), :class => "buttom_add_to_cart" %>
        </div>
      <% end %>
    </article>
  </div>
</main>
<div class="mobile" name="top">
  <div class="uk-button-dropdown" data-uk-dropdown="{justify:'.mobile'}">
    <!-- This is the dropdown -->
    <button class="mobile_search_button"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></button>
    <div class="uk-dropdown">
      <%= render  partial: "searches/new" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <h2>Найдено <%= @search.products.count %> товаров</h2>
      <% @search.products.each do |product| %>
        <div class="col-xs-12 product_view_class">
          <%= render  partial: "products/product", locals: { product: product } %>
          <%= button_to 'В Корзину', product_line_items_path(product.id), :class => "buttom_add_to_cart" %>
        </div>
      <% end %>
    </div>
  </div>
  <br>
</div>
<a href="#0" class="cd-top"><span class="glyphicon glyphicon-chevron-up" aria-hidden="true"></span></a>
