<% title t("header_menu.reviews") %>
<h1><%= t("header_menu.reviews") %></h1>
<div class="container">
  <div class="all_comments">
    <%= render @comments %>
  </div>
  <div class="row">
    <div class="col-md-6">
      <center>
        <%= will_paginate @comments, renderer: BootstrapPagination::Rails, previous_label: '<=', next_label:'=>' %>
      </center>
    </div>
  </div>
  <div class="row comment-alert">
    <div class="col-md-6">
      <div class="alert"></div>
    </div>
  </div>
  <div class="row">
    <% if current_user %>
      <div class="col-md-6 col-xs-12">
        <%= render 'form' %>
      </div>
    <% else %>
      <div class="col-md-6 alert alert-warning">
        <p><%= t('reviews.warning_message') %> <%= link_to t('reviews.log_in'), new_user_session_path %></p>
      </div>
    <% end %>
  </div>
</div>
