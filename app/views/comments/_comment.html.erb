<div class="row" id="comment_<%= comment.id %>">
  <div class="well col-md-6">
    <h3><%= link_to comment.user.full_name, user_path(comment.user.id) %></h3>
    <%= raw comment.body %>
    <br>
    <% "#{comment.rating}".to_i.times do %>
      <%= fa_icon 'star', class: 'fa-1x text-success' %>
    <% end %>
    <% if current_user.try(:admin) %>
      <p>
        <%= link_to t('reviews.remove_a_review'), comment_path(comment), method: :delete, remote: true, data: { confirm: t('reviews.remove_confirm') } %>
      </p>
    <% end %>
  </div>
</div>
