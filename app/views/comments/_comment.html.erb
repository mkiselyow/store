<div class="row" id="comment_<%= comment.id %>">
  <div class="well col-md-6">
    <div class="row">
      <div class="pull-left">
        <h3><%= link_to comment.user.full_name, user_path(comment.user.id) %></h3>
      </div>
      <div class="pull-right">
        <% if current_user.try(:admin) %>
          <%= link_to comment_path(comment), method: :delete, remote: true, data: { confirm: t('reviews.remove_confirm') } do %>
            <%= fa_icon 'times', class: 'fa-2x text-danger', title: t('reviews.remove_a_review') %>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="row">
      <%= raw comment.body %>
      <% "#{comment.rating}".to_i.times do %>
        <%= fa_icon 'star', class: 'fa-1x text-success' %>
      <% end %>
    </div>
  </div>
</div>
