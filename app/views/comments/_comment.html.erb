<div class="row" id="comment_<%= comment.id %>">
  <div class="well col-md-6">
    <h3><%= comment.user.full_name%></h3>
    <%= raw comment.body %>
    <br>
    <% "#{comment.rating}".to_i.times do %>
      <%= fa_icon 'star', class: 'fa-1x text-success' %>
    <% end %>
    <% if current_user.admin? %>
      <p>
        <%= link_to 'Удалить коммент', comment_path(comment), method: :delete, remote: true, data: { confirm: 'Вы действительно желаете удалить этот отзыв?' } %>
      </p>
    <% end %>
  </div>
</div>
