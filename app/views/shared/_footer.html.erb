<footer class="footer">
  <div class="footer-wrap">
    <div class="footer__subscribe-wrap">
      <div class="footer-subscribe">
        <button class='btn btn-primary' data-toggle="modal" data-target="#form_send">Связаться с нами!</button>
        <p></p>
        <%= render 'shared/modal_send_form' %>
      </div>
      <div class="header__phone">
        <br>
        <div class="phone-numbers">
          <div class="row">
            <div class="col-xs-2 col-md-2">
              <%= fa_icon 'phone', class: 'fa-3x phone-icon' %>
            </div>
            <div class="col-xs-10 col-md-10">
              <p class="numbers">095-775-16-86</p>
              <p class="numbers">068-682-99-19</p>
              <p class='numbers'><i>с 9:00 - 21:00</i></p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="footer__layout">
      <div class="footer__columns-wrap">
        <div class="footer__columns">
          <ul class="footer-list">
            <p></p>
            <% Category.only_parent.limit(8).each do |category| %>
              <%= link_to category_path(category) do %>
                <li class="footer-list__item"><%= category.name.truncate(50) %></li>
              <% end %>
            <% end %>
          </ul>
          <ul class="footer-list">
            <li class="footer-list__item"><%= link_to "Все товары", products_path %></li>
            <li class="footer-list__item"><%= link_to "Все категории", categories_path %></li>
            <li class="footer-list__item"><%= link_to "Оплата", payment_path %></li>
            <li class="footer-list__item"><%= link_to "Доставка", delivery_path %></li>
            <li class="footer-list__item"><%= link_to "Полезные статьи", useful_articles_path %></li>
            <li class="footer-list__item"><%= link_to "Акции", shares_path %></li>
            <li class="footer-list__item"><%= link_to "Отзывы", comments_path %></li>
            <li class="footer-list__item"><%= link_to "Контакты", contacts_path %></li>
            <li class="footer-list__item"><%= link_to "Партнерам", partners_path  %></li>
          </ul>
        </div>
        <div class="footer-copyright">
          <%= link_to root_path do %>
            <%= cl_image_tag("мапапама_nb3pbw.png", :quality=>15, :height=>40, :crop=>"scale") %>
            <%= cl_image_tag("logo.png", :quality=>15, :width=>40, :crop=>"scale") %>
          <% end %>
          <p>
            <b>Мапапама</b> - подари ребёнку радость <%= fa_icon 'check', class: 'fa-x2 check-green' %>
          </p>
        </div>
        <div class="footer-text">© 2017</div>
      </div>
    </div>
  </div>
</footer>
