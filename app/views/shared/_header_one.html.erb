<div class="col-lg-6 col-md-6 col-xs-12 col-sm-12 top_container_left">
  <div class="row">
    <div class="col-md-5 col-lg-5 col-xs-9 col-sm-4 mapapama_logo">
      <%= link_to root_path do %>
        <%= cl_image_tag("мапапама_nb3pbw.png", quality: 15, height: 100, crop: "scale") %>
      <% end %>
    </div>
    <div class="col-md-2 col-lg-2 col-xs-3 col-sm-2 mapapama_logo">
      <%= link_to root_path do %>
        <%= cl_image_tag("logo.png", quality: 15, width: 84, crop: "scale") %>
      <% end %>
    </div>
    <div class="col-md-5 col-lg-5 col-xs-12 col-sm-6 leuze">
      <%= raw t "leuze" %>
      <% 1.times do %>
        <%= fa_icon 'check', class: 'fa-1x check-green' %>
      <% end %>
    </div>
  </div>
</div>
<div class="col-lg-2 col-md-2 col-sm-6 col-xs-12 top_container_center">
  <div class="row">
    <div class="phone-numbers">
      <div class="row">
        <div class="col-xs-12 col-md-10 col-sm-12">
          <p class="numbers col-xs-12 col-md-12 col-sm-8"><%= fa_icon 'phone', class: 'fa-1x phone-icon', text: '095-775-16-86; 068-682-99-19' %></p>
          <p class='numbers col-xs-12 col-md-12 col-sm-4'><i>с 9:00 - 21:00</i></p>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="col-lg-4 col-md-4 col-xs-12 col-sm-6 top_container_right">
  <div class="row">
    <div class="col-xs-12 col-md-12 col-lg-12 col-sm-12">
      <div class="col-md-8 col-xs-7 col-sm-6">
        <% if user_signed_in? %>
          <div class="dropdown">
            <button class="dropdown-toggle pull-left" type="button" data-toggle="dropdown">
              <span class="full-name-header">
                <%= current_user.full_name %>
              </span>
              <%= image_tag current_user.avatar_url(:small), class: 'img-circle header-avatar' %>
            </button>
            <ul class="dropdown-menu">
              <li><%= link_to t("header_one.my_profile"), private_cabinate_path %></li>
              <% if current_user.admin? or current_user.moderator? %>
                <li><%= link_to 'Панель управления', admin_root_path %></li>
              <% end %>
              <li class='divider'></li>
              <li><%= link_to t("header_one.log_out"), destroy_user_session_path, method: :delete %></li>
            </ul>
          </div>
        <% else %>
          <%= link_to t("header_one.sign_up"), new_user_registration_path %>
          |
          <%= link_to t("header_one.log_in"), new_user_session_path %>
        <% end %>
      </div>
      <div class="col-md-4 col-xs-5 col-sm-6">
        <div class="btn-group pull-right">
          <%= link_to cart_path(@cart.id), class: "btn btn-success btn-sm" do %>
            <%= fa_icon 'shopping-basket' %>
          <% end %>
          <button class='btn btn-sm btn-primary' data-toggle="modal" data-target="#form_send">
            <%= fa_icon 'envelope-o' %>
          </button>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-md-12 col-lg-12 col-sm-12">
      <%= form_tag(products_path, method: :get) do %>
        <span class="input-group">
          <%= text_field_tag :query, nil, placeholder: t("header_one.search_placeholder"), required: true, class: 'form-control search-input' %>
          <span class="input-group-btn">
            <%= submit_tag t("header_one.search"), query: nil, class: "btn btn-default"  %>
          </span>
        </span>
      <% end %>
      <div class="row">
        <div class="col-md-8 col-xs-5 col-sm-6">
          <%= link_to_unless_current 'RU', locale: 'ru' %> |
          <%= link_to_unless_current 'UA', locale: 'ua' %> |
          <%= link_to_unless_current 'EN', locale: 'en' %>
        </div>
        <div class="social-button col-md-4 col-xs-7 col-sm-6">
          <div class="pull-right">
            <a href="#" class="fa fa-icons fa-facebook"></a>
            <a href="#" class="fa fa-icons fa-google"></a>
            <a href="#" class="fa fa-icons fa-vk"></a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
