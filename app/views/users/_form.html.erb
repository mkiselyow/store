<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label(:first_name, "Имя" ) %>
    <%= form.text_field :first_name, id: :user_first_name %>
  </div>

  <div class="field">
    <%= form.label(:last_name, "Фамилия" ) %>
    <%= form.text_field :last_name, id: :user_last_name %>
  </div>

  <div class="field">
    <%= form.label(:email, "Эл. почта" ) %>
    <%= form.text_field :email, id: :user_email %>
  </div>

  <div class="field">
    <%= form.label(:number, "Номер телефона" ) %>
    <%= form.text_field :number, id: :user_number %>
  </div>

  <div class="field">
    <%= form.label(:admin, "Администратор" ) %>
    <%= form.check_box :admin, id: :user_admin %>
  </div>

  <%= form.file_field :avatar %>

  <div class="actions">
    <%= form.submit( "Подтвердить" ) %>
  </div>
<% end %>
