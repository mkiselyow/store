<div class="row">
  <div class="col-md-2 col-xs-5 col-sm-3">
    <%= image_tag @user.avatar_url(:medium), class: 'img-thumbnail profile-avatar' %>
  </div>
  <div class="col-md-6 col-xs-7 col-sm-9">
    <div class="well">
      <h2>
        <%= @user.full_name %>
        <% if current_user.id == @user.id %>
          <%= link_to edit_user_registration_path(@user) do %>
            <%= fa_icon 'pencil', title: 'Изменить профиль' %>
          <% end %>
        <% end %>
      </h1>
      <p>
        <strong>Эл. почта:</strong>
        <%= @user.email %>
      </p>
      <p>
        <strong>Номер телефона:</strong>
        <%= @user.number %>
      </p>
      <p>
        <strong>Роль:</strong>
        <% if @user.admin? %>
          <span class="label label-danger">Администратор</span>
        <% else %>
          <span class="label label-primary">Пользователь</span>
        <% end %>
      </p>
    </div>
  </div>
  <% if current_user.id == @user.id %>
    <div class="col-md-4 col-xs-12 col-sm-12">
      <div class="well">
        <h2>Ваши заказы</h2>
        <table class='table'>
          <thead>
            <th>№ заказа</th>
            <th>Общая сумма</th>
            <th>Статус заказа</th>
          </thead>
          <tbody>
            <% @user_olders.each do |user_older| %>
              <tr>
                <td>Заказ № <%= user_older.id %></td>
                <td><%= number_to_currency(user_older.order_total_price, locale: :ru) %></td>
                <td>
                  <center>
                    <%= fa_icon "#{ user_older.delivered ? 'check' : 'minus' }-square-o", class: "text-#{user_older.delivered ? 'success' : 'warning' } fa-2x", title: "#{ user_older.delivered ? 'Заказ выполнен успешно' : 'На даний момент находится на обработке' }" %>
                  </center>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>
</div>
<% if current_user.id == @user.id %>
  <% if @user_views != 0 %>
    <div class="row">
      <div class="col-md-12">
        <h1>Вы только что смотрели</h1>
        <% @user_views.each do |view| %>
          <div class="col-md-2 col-sm-3 col-xs-6 product_view_class product_view_class_all">
            <%= render  partial: "products/product", locals: { product: view.product } %>
            <%= button_to t('products.add_to_cart'), product_line_items_path(view.product.id), class: "buttom_add_to_cart", remote: true %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>
