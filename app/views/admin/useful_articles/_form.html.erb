<%= form_for [:admin, @useful_article] do |f| %>
  <%= f.label 'Введите заголовок' %>
  <br>
  <%= f.text_field :title, placeholder: "Введите заголовок", class: 'form-control', required: true %>
  <br>
  <%= f.select :category_post_id, options_from_collection_for_select(CategoryPost.all, :id, :name), {}, class: 'form-control' %>
  <br>
    <%= f.label(:published, "Публикация") %>
    <%= f.check_box :published %>
  <hr>
  <%= f.label 'Содержание' %>
  <%= f.hidden_field  :user_id, value: current_user.id %>
  <br>
  <%= f.cktext_area :body, cols: 40, ckeditor: { uiColor: '#AADC6E', toolbar: 'mini' }, placeholder: "Введите заголовок", required: true %>
  <br>
  <%= f.file_field :preview %>
  <br>
  <%= f.submit class: 'btn btn-success pull-left' %>
  <%= link_to 'Назад к статьям', admin_useful_articles_path, class: 'btn btn-primary pull-right' %>
  <p>
<% end %>
