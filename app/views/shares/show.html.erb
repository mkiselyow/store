<h1><%= @share.title %></h1>
<div class="container">
  <div class="col-md-8 col-md-offset-2 well">
    <div class="row">
      <%= image_tag(@share.poster_url(:medium), class: 'poster-show') %>
    </div>
    <br>
    <div class="row">
      <h3>с <%= Russian::strftime(@share.start_share, "%d %B ") %> по <%= Russian::strftime(@share.end_share, "%d %B %Y") %></h3>
    </div>
    <div class="row">
      <div class="share-body">
        <%= raw @share.body %>
        <br>
        <%= link_to 'Назад к акциям', shares_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>
