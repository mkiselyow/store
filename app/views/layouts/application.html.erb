<!DOCTYPE html>
<html>
  <head>
    <title>Тимка</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
  </head>

  <body>
    <ul class="nav nav-tabs">
      <li role="presentation" class="active"><%= cl_image_tag("logo.png", :quality=>15, :width=>100, :crop=>"scale") %></li>
      <li role="presentation" class="active"><%= link_to "Главная", root_path %></li>
      <li role="presentation"><%= link_to "Пользователи", users_path %></li>
      <li role="presentation"><%= link_to "Товары", products_path %></li>
      <% if user_signed_in? %>
        <li role="presentation"><%= link_to "Вы вошли как #{current_user.email} Редактировать Профиль", edit_user_registration_path %></li>
        <li role="presentation"><%= link_to "Выйти", destroy_user_session_path, method: :delete %></li> 
      <% else %>
        <li role="presentation"><%= link_to "Регистрация", new_user_registration_path %></li>
        <li role="presentation"><%= link_to "Войти", new_user_session_path %></li> 
      <% end %>
    </ul>
<!--     <p class="notice"><%= notice %></p>
 -->    <p class="alert"><%= alert %></p>
    <%= yield %>
    <%= cloudinary_js_config %>
  </body>
</html>
