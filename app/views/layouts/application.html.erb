<!DOCTYPE html>
<html>
  <head>
    <title>Мапапама</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= favicon_link_tag %>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <%= cloudinary_js_config %>

  </head>

  <body>
    <div class="container-fluid">
      <div class="row top_container">
        <%= render 'shared/header_one' %>
      </div>
      <div class="row">
        <%= render 'shared/header_menu' %>
      </div>
      <div class="row">
        <br>
        <div class='col-md-4 col-md-offset-8'>
          <%- flash.each do |name, msg|%>
            <%= content_tag :div, msg, id: "flash_#{name}", class: 'alert alert-info message' %>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class='col-md-4'>
          </div>
          <ul id="social_side_links">
            <li>
              <a style="background-color: #4c75a3;" href="https://vk.com" target="_blank">
                <img src="https://vignette2.wikia.nocookie.net/risen/images/4/4a/VK_%D0%B8%D0%BA%D0%BE%D0%BD%D0%BA%D0%B0.png/revision/latest?cb=20130307133156&path-prefix=ru" alt="" />
              </a>
            </li>
            <li>
              <a style="background-color: #3c5a96;" href="https://facebook.com" target="_blank">
                <img src="https://www.dropbox.com/s/xk5pdj8nks1ymdh/facebook-icon.png?raw=1" alt="" />
              </a>
            </li>
            <li>
              <a style="background-color: red;" href="https://google.com" target="_blank">
                <img src="http://www.yourvillageonline.com/wp-content/uploads/2015/11/google-plus-icon.png" alt="" />
              </a>
            </li>
          </ul>
          <%= yield %>
        </div>
      </div>
      <div class="row">
        <%= render 'shared/footer' %>
      </div>
    </div>  
  </body>
</html>
